<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Crossways</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/dash.css" />
</head>
<body>
    @await Html.PartialAsync("_Navbar.cshtml")
    <div id="page-wrapper">
        <div class="container-fluid h-100 pt-1">
            <div class="row h-100">
                @await Html.PartialAsync("_LeftSidebar.cshtml")
                <div class="col-8">
                    <main role="main" class="pb-3 row" id="content">
                        @RenderBody()
                    </main>
                </div>
                @await Html.PartialAsync("_RightSidebar.cshtml")
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/popperjs/popper.min.js"></script>
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
